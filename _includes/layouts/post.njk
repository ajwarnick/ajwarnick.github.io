---
layout: layouts/base.njk
templateClass: tmpl-post
---

<div class="work__title">
    {{ title | upper }}
</div>


<div class="work__layout">
    <div class="work__featured_image">
        <img src="{{ featured_image | url }}" />
    </div>
    <div>
        <h4>
            {{ year }}
        </h4>
        <h4>
            {{ type }}
        </h4>
        <h4>
            {{ materials }}
        </h4>
        <h5>
            {{ description.long }}
        </h5>

        {% for tag in tags %}
            {%- if tag != "posts" -%}
                {% set tagUrl %}/work/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
            {%- endif -%}
        {% endfor %}

        <div class="work__support_images">
            {% ResponsiveImage "illu_237-1.jpg", "this is an alt description", "(min-width: 30em) 50vw, 100vw" %}
            {% for image in support_images %}
                <!-- <img src="{{ image | url }}"> -->
            {% endfor %} 
        </div>
        

    </div>
</div>